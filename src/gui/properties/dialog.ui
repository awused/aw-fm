<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="AwFmProperties" parent="GtkWindow">
    <property name="title">Properties</property>
    <property name="default-width">800</property>
    <property name="default-height">400</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>


        <child>
          <object class="GtkNotebook">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>

            <child>
              <object class="GtkNotebookPage">
                <property name="tab-expand">1</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>

                    <!-- icon -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>

                        <child>
                          <object class="GtkImage" id="icon">
                            <property name="margin-top">6</property>
                            <property name="margin-bottom">6</property>
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="pixel-size">128</property>
                          </object>
                        </child>

                      </object>
                    </child>


                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-top">8px</property>
                        <property name="spacing">8</property>

                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel" id="name_label">
                                <property name="label">Name:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="name_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>


                        <child>
                          <object class="GtkBox" id="type_box">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Type:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="type_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>


                        <child>
                          <object class="GtkBox" id="children_box">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">4px</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Contents:</property>
                                    <property name="xalign">0</property>

                                    <style>
                                      <class name="prop-label"/>
                                    </style>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkSpinner" id="spinner">
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="children_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Size:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="size_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Size on Disk:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="allocated_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Location:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="location">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkBox" id="mtime_box">
                            <property name="orientation">horizontal</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Modified:</property>
                                <property name="xalign">0</property>

                                <style>
                                  <class name="prop-label"/>
                                </style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkLabel" id="mtime_text">
                                <property name="selectable">true</property>

                                <attributes>
                                  <attribute name="insert-hyphens" value="false"></attribute>
                                </attributes>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- btime? -->

                      </object>
                    </child>

                  </object>
                </property>

                <property name="tab">
                  <object class="GtkLabel">
                    <property name="label">Basic</property>
                    <property name="use-underline">1</property>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkNotebookPage">
                <property name="tab-expand">1</property>
                <property name="child">
                  <object class="GtkLabel">
                    <property name="label">Not yet implemented</property>
                  </object>
                </property>

                <property name="tab">
                  <object class="GtkLabel">
                    <property name="label">Permissions</property>
                    <property name="use-underline">1</property>
                  </object>
                </property>
              </object>
            </child>


          </object>
        </child> <!-- notebook -->


        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">8</property>
            <property name="margin-top">8px</property>
            <property name="margin-bottom">8px</property>
            <property name="margin-end">8px</property>
            <property name="halign">GTK_ALIGN_END</property>

            <child>
              <object class="GtkButton" id="close">
                <property name="label">Close</property>
                <property name="width-request">96</property>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>


